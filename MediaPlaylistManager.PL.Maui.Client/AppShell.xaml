<?xml version="1.0" encoding="UTF-8"?>

<Shell
    x:Class="MediaPlaylistManager.PL.Maui.Client.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pages="clr-namespace:MediaPlaylistManager.PL.Maui.Client.UI.Pages"
    FlyoutBehavior="Disabled"
    Title="Media Playlist Manager">

    <TabBar>
        <ShellContent Title="Player"
                      ContentTemplate="{DataTemplate pages:PlayerPage}" />
        <ShellContent Title="Playlists"
                      ContentTemplate="{DataTemplate pages:PlaylistListPage}" />
        <ShellContent Title="Search"
                      ContentTemplate="{DataTemplate pages:SearchPage}">
        </ShellContent>
    </TabBar>
</Shell>